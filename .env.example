# ==============================================
# MONOREPO ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env in the root of the project
# and fill in the values for your environment
#
# cp .env.example .env
# ==============================================

# ----------------------------------------------
# API (NestJS) Configuration
# ----------------------------------------------

# Application
NODE_ENV=development
API_PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=nestjs_db

# JWT Configuration (uncomment when implementing authentication)
# JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
# JWT_EXPIRES_IN=1d

# CORS Configuration (optional)
# CORS_ORIGIN=http://localhost:3001

# Logging (optional)
# LOG_LEVEL=debug

# ----------------------------------------------
# WEB (Next.js) Configuration
# ----------------------------------------------

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000

# Next.js Port
WEB_PORT=3001

# Analytics (optional)
# NEXT_PUBLIC_GA_ID=
# NEXT_PUBLIC_GTM_ID=

# Feature Flags (optional)
# NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ----------------------------------------------
# Docker Configuration (optional)
# ----------------------------------------------

# Use these when running with docker-compose
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres
# POSTGRES_DB=nestjs_db
